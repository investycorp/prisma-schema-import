{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"],
}